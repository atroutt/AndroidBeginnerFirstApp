<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pl_container" >

    <ImageView
        android:id="@+id/painting_thumb"
        android:layout_width="match_parent"
        android:layout_height="780dp"
        android:background="#00000088"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/painting_text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#55555555"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/painting_title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:paddingBottom="1dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />/>

        <TextView
            android:id="@+id/painting_artist"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="#fff"
            android:layout_below="@id/painting_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        />
    </RelativeLayout>
</RelativeLayout>
